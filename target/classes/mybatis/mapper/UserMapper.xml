<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Guat0305.boot.mapper.Register">
    <select id="findAlluser" resultType="com.Guat0305.boot.pojo.User">
        select * from user
    </select>

    <select id="findUserbyName" resultType="com.Guat0305.boot.pojo.User">
        select * from user where username = #{username}
    </select>

    <insert id="insertUser" parameterType="com.Guat0305.boot.pojo.User">
        insert into user (username , password)
        values(#{username} , #{password})
    </insert>
</mapper>